{
  "include": ["lib/*.js"],

  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    // "noImplicitAny": true,
    "outDir": "types",
    "target": "ES2021",
    "resolveJsonModule": true,
    "lib": ["ES2021"],
    "strict": true
  }
}
